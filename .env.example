# KenPom API
KENPOM_API_KEY=your_kenpom_api_key_here

# The Odds API
ODDS_API_KEY=your_odds_api_key_here

# Database (use SQLite for development, PostgreSQL for production)
# SQLite (default for Docker):
DATABASE_URL=sqlite:///./cbb_betting.db
# PostgreSQL (uncomment for production):
# DATABASE_URL=postgresql://cbb_user:cbb_password@db:5432/cbb_betting

# PostgreSQL settings (only needed if using PostgreSQL)
# POSTGRES_USER=cbb_user
# POSTGRES_PASSWORD=cbb_password
# POSTGRES_DB=cbb_betting

# App Settings
ENV=production
DEBUG=false

# CORS - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# Background task interval (seconds) - default 4 hours
RESULT_UPDATE_INTERVAL=14400
